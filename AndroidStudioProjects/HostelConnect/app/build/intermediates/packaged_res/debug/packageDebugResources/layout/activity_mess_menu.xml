<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F7FA">

  <!-- App Bar -->
  <com.google.android.material.appbar.AppBarLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#667EEA"
      app:elevation="4dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Mess Menu"
        app:titleTextColor="#FFFFFF"
        app:navigationIcon="?attr/homeAsUpIndicator" />

    <!-- Date Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#667EEA"
        android:padding="16dp">

      <TextView
          android:id="@+id/tvCurrentDay"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Today's Menu"
          android:textColor="#FFFFFF"
          android:textSize="20sp"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/tvCurrentDate"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Sunday, December 15, 2024"
          android:textColor="#E0E7FF"
          android:textSize="13sp"
          android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Day Tabs -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:background="#667EEA">

      <com.google.android.material.tabs.TabLayout
          android:id="@+id/tabLayoutDays"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="#667EEA"
          app:tabMode="scrollable"
          app:tabTextColor="#E0E7FF"
          app:tabSelectedTextColor="#FFFFFF"
          app:tabIndicatorColor="#FFFFFF"
          app:tabIndicatorHeight="3dp"
          app:tabMinWidth="80dp" />
    </HorizontalScrollView>
  </com.google.android.material.appbar.AppBarLayout>

  <!-- Meal Cards -->
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

      <!-- Breakfast Card -->
      <androidx.cardview.widget.CardView
          android:id="@+id/cardBreakfast"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="16dp"
          app:cardCornerRadius="16dp"
          app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŒ…"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/tvBreakfastTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Breakfast"
                android:textColor="#1A1A2E"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6:00 - 10:00 AM"
                android:textColor="#6B7280"
                android:textSize="12sp"
                android:background="#F3F4F6"
                android:padding="6dp"
                android:layout_marginStart="8dp" />
          </LinearLayout>

          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="#E5E7EB"
              android:layout_marginTop="12dp"
              android:layout_marginBottom="12dp" />

          <TextView
              android:id="@+id/tvBreakfastItems"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Poha, Tea/Coffee, Banana"
              android:textColor="#374151"
              android:textSize="15sp"
              android:lineSpacingExtra="4dp" />

          <TextView
              android:id="@+id/tvBreakfastSpecial"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="â­ Special: Fresh Orange Juice"
              android:textColor="#F59E0B"
              android:textSize="13sp"
              android:textStyle="italic"
              android:layout_marginTop="8dp"
              android:visibility="gone" />
        </LinearLayout>
      </androidx.cardview.widget.CardView>

      <!-- Lunch Card -->
      <androidx.cardview.widget.CardView
          android:id="@+id/cardLunch"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="16dp"
          app:cardCornerRadius="16dp"
          app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â˜€ï¸"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/tvLunchTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lunch"
                android:textColor="#1A1A2E"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:00 - 3:00 PM"
                android:textColor="#6B7280"
                android:textSize="12sp"
                android:background="#F3F4F6"
                android:padding="6dp"
                android:layout_marginStart="8dp" />
          </LinearLayout>

          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="#E5E7EB"
              android:layout_marginTop="12dp"
              android:layout_marginBottom="12dp" />

          <TextView
              android:id="@+id/tvLunchItems"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Dal, Rice, Roti, Veg Curry, Salad"
              android:textColor="#374151"
              android:textSize="15sp"
              android:lineSpacingExtra="4dp" />

          <TextView
              android:id="@+id/tvLunchSpecial"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="â­ Special: Paneer Butter Masala"
              android:textColor="#F59E0B"
              android:textSize="13sp"
              android:textStyle="italic"
              android:layout_marginTop="8dp"
              android:visibility="gone" />
        </LinearLayout>
      </androidx.cardview.widget.CardView>

      <!-- Dinner Card -->
      <androidx.cardview.widget.CardView
          android:id="@+id/cardDinner"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="16dp"
          app:cardCornerRadius="16dp"
          app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŒ™"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/tvDinnerTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dinner"
                android:textColor="#1A1A2E"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7:00 - 10:00 PM"
                android:textColor="#6B7280"
                android:textSize="12sp"
                android:background="#F3F4F6"
                android:padding="6dp"
                android:layout_marginStart="8dp" />
          </LinearLayout>

          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="#E5E7EB"
              android:layout_marginTop="12dp"
              android:layout_marginBottom="12dp" />

          <TextView
              android:id="@+id/tvDinnerItems"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Dal, Rice, Roti, Mix Veg, Salad"
              android:textColor="#374151"
              android:textSize="15sp"
              android:lineSpacingExtra="4dp" />

          <TextView
              android:id="@+id/tvDinnerSpecial"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="â­ Special: Gulab Jamun"
              android:textColor="#F59E0B"
              android:textSize="13sp"
              android:textStyle="italic"
              android:layout_marginTop="8dp"
              android:visibility="gone" />
        </LinearLayout>
      </androidx.cardview.widget.CardView>

      <!-- Info Card -->
      <com.google.android.material.card.MaterialCardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:cardCornerRadius="12dp"
          app:cardElevation="2dp"
          app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#E0E7FF"
            android:padding="16dp"
            android:gravity="center_vertical">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="â„¹ï¸"
              android:textSize="24sp" />

          <TextView
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="Menu may vary based on availability. Special dishes are served on weekends."
              android:textColor="#374151"
              android:textSize="12sp"
              android:layout_marginStart="12dp"
              android:lineSpacingExtra="2dp" />
        </LinearLayout>
      </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
  </ScrollView>
</LinearLayout>