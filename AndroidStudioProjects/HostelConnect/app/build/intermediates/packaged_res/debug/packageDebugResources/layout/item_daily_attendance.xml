<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row: Date and Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="25 Oct 2025, Monday"
                android:textColor="#1A1A2E"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRESENT"
                android:textColor="#10B981"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/status_badge_background"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E5E7EB"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Check Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ•"
                android:textSize="16sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvCheckTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Checked at: 09:00 PM"
                android:textColor="#6B7280"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Entry Time -->
        <LinearLayout
            android:id="@+id/layoutEntryTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŸ¢"
                android:textSize="16sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvEntryTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Entry: 08:30 AM"
                android:textColor="#10B981"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Exit Time -->
        <LinearLayout
            android:id="@+id/layoutExitTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”´"
                android:textSize="16sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvExitTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Exit: 05:30 PM"
                android:textColor="#EF4444"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Movement Count -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#F9FAFB"
            android:padding="8dp"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“Š"
                android:textSize="14sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvMovements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entries: 3 | Exits: 2"
                android:textColor="#6B7280"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>