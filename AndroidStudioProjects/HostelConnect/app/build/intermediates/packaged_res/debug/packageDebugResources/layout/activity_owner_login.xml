<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:gravity="center"
    android:padding="24dp">

    <!-- Logo Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ¢"
        android:textSize="72sp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Owner Portal"
        android:textSize="32sp"
        android:textColor="#1976D2"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome back! Please login to continue"
        android:textSize="14sp"
        android:textColor="#757575"
        android:layout_marginBottom="32dp"/>

    <!-- Login Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:padding="24dp">

        <!-- Email Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:textSize="14sp"
            android:textColor="#424242"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etOwnerEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter your email"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:background="#F5F5F5"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

        <!-- Password Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="14sp"
            android:textColor="#424242"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etOwnerPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter your password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:background="#F5F5F5"
            android:textSize="16sp"
            android:layout_marginBottom="24dp"/>

        <!-- Login Button -->
        <Button
            android:id="@+id/btnOwnerLogin"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Login"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="#1976D2"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Signup Link -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account? "
                android:textSize="14sp"
                android:textColor="#757575"/>

            <TextView
                android:id="@+id/tvOwnerSignup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textSize="14sp"
                android:textColor="#1976D2"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Back to Home -->
    <TextView
        android:id="@+id/tvBackToHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â† Back to Home"
        android:textSize="14sp"
        android:textColor="#1976D2"
        android:layout_marginTop="24dp"
        android:clickable="true"
        android:focusable="true"/>

</LinearLayout>