<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <!-- Logo Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ›¡ï¸"
            android:textSize="64sp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Security Registration"
            android:textSize="28sp"
            android:textColor="#388E3C"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create your security account"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginBottom="24dp"/>

        <!-- Signup Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:padding="24dp">

            <!-- Full Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:textSize="14sp"
                android:textColor="#424242"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etSecurityName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enter your full name"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:background="#F5F5F5"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"/>

            <!-- Security ID -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Security ID"
                android:textSize="14sp"
                android:textColor="#424242"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etSecurityId"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enter your security ID"
                android:inputType="text"
                android:padding="12dp"
                android:background="#F5F5F5"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"/>

            <!-- Phone -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textSize="14sp"
                android:textColor="#424242"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etSecurityPhone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enter your phone number"
                android:inputType="phone"
                android:padding="12dp"
                android:background="#F5F5F5"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"/>

            <!-- Shift -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shift Timing"
                android:textSize="14sp"
                android:textColor="#424242"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <Spinner
                android:id="@+id/spinnerShift"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#F5F5F5"
                android:padding="12dp"
                android:layout_marginBottom="16dp"/>

            <!-- Password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textSize="14sp"
                android:textColor="#424242"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etSecurityPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Create a password"
                android:inputType="textPassword"
                android:padding="12dp"
                android:background="#F5F5F5"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"/>

            <!-- Confirm Password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm Password"
                android:textSize="14sp"
                android:textColor="#424242"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etSecurityConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Re-enter your password"
                android:inputType="textPassword"
                android:padding="12dp"
                android:background="#F5F5F5"
                android:textSize="16sp"
                android:layout_marginBottom="24dp"/>

            <!-- Signup Button -->
            <Button
                android:id="@+id/btnSecuritySignup"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Create Account"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:background="#388E3C"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <!-- Login Link -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have an account? "
                    android:textSize="14sp"
                    android:textColor="#757575"/>

                <TextView
                    android:id="@+id/tvSecurityLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:textSize="14sp"
                    android:textColor="#388E3C"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Back to Home -->
        <TextView
            android:id="@+id/tvBackToHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â† Back to Home"
            android:textSize="14sp"
            android:textColor="#388E3C"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>
</ScrollView>