<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dynamic QR Codes"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QR codes refresh automatically for security"
            android:textSize="14sp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Entry QR Code Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardQREntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Entry Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ENTRY"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"/>

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/circle_green"/>
                </LinearLayout>

                <!-- QR Code -->
                <ImageView
                    android:id="@+id/ivQRCodeEntry"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:contentDescription="Entry QR Code"
                    android:layout_marginBottom="16dp"/>

                <!-- Status -->
                <TextView
                    android:id="@+id/tvQRStatusEntry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Active - Scan to mark Entry"
                    android:textSize="14sp"
                    android:textColor="#4CAF50"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"/>

                <!-- Timer -->
                <TextView
                    android:id="@+id/tvTimerEntry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Expires in: 02:00"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#666666"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="@drawable/rounded_bg_light"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Exit QR Code Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardQRExit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Exit Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="EXIT"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#F44336"/>

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/circle_red"/>
                </LinearLayout>

                <!-- QR Code -->
                <ImageView
                    android:id="@+id/ivQRCodeExit"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:contentDescription="Exit QR Code"
                    android:layout_marginBottom="16dp"/>

                <!-- Status -->
                <TextView
                    android:id="@+id/tvQRStatusExit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Active - Scan to mark Exit"
                    android:textSize="14sp"
                    android:textColor="#F44336"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"/>

                <!-- Timer -->
                <TextView
                    android:id="@+id/tvTimerExit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Expires in: 02:00"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#666666"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="@drawable/rounded_bg_light"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Instructions -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#E3F2FD">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ℹ️ Instructions"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• QR codes refresh every 2 minutes for security\n• Students must scan within the validity period\n• Entry and Exit have separate QR codes\n• Keep this screen open for students to scan"
                    android:textSize="14sp"
                    android:textColor="#424242"
                    android:lineSpacingExtra="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>