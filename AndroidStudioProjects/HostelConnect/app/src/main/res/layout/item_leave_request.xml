<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardLeaveRequest"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Name and Status Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Student Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_orange_dark"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@drawable/rounded_background"/>

        </LinearLayout>

        <!-- Phone (Owner view only) -->
        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone: 1234567890"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp"
            android:visibility="gone"/>

        <!-- Dates -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“… "
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tvDates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024-01-01 to 2024-01-05"
                android:textSize="14sp"
                android:textColor="#666666"/>

        </LinearLayout>

        <!-- Reason -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reason:"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Family function"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="4dp"/>

        <!-- Requested Date -->
        <TextView
            android:id="@+id/tvRequestedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Requested: 2024-01-01"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_marginTop="8dp"/>

        <!-- Action Buttons (Owner view only, for pending requests) -->
        <LinearLayout
            android:id="@+id/layoutActionButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:visibility="gone">

            <Button
                android:id="@+id/btnApprove"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="âœ“ Approve"
                android:textColor="@android:color/white"
                android:backgroundTint="@android:color/holo_green_dark"
                android:layout_marginEnd="8dp"
                android:padding="12dp"
                android:textAllCaps="false"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btnReject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="âœ— Reject"
                android:textColor="@android:color/white"
                android:backgroundTint="@android:color/holo_red_dark"
                android:padding="12dp"
                android:textAllCaps="false"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>