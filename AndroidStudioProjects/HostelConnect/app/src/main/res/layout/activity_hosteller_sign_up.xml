<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F4F8"
    tools:context=".HostellerSignupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âœï¸"
            android:textSize="60sp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#1A237E"
            android:gravity="center"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fill in your details to register"
            android:textSize="14sp"
            android:textColor="#5C6BC0"
            android:gravity="center"
            android:layout_marginBottom="32dp"/>

        <!-- Full Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="#FFFFFF"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxStrokeColor="#3F51B5"
            app:hintTextColor="#3F51B5">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSignupName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ðŸ‘¤ Full Name"
                android:inputType="textPersonName"
                android:textSize="16sp"
                android:padding="16dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Phone Number -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="#FFFFFF"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxStrokeColor="#3F51B5"
            app:hintTextColor="#3F51B5">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSignupPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ðŸ“± Phone Number"
                android:inputType="phone"
                android:maxLength="10"
                android:textSize="16sp"
                android:padding="16dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Email -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="#FFFFFF"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxStrokeColor="#3F51B5"
            app:hintTextColor="#3F51B5">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSignupEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ðŸ“§ Email Address"
                android:inputType="textEmailAddress"
                android:textSize="16sp"
                android:padding="16dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Address -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="#FFFFFF"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxStrokeColor="#3F51B5"
            app:hintTextColor="#3F51B5">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSignupAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ðŸ  Permanent Address"
                android:inputType="textMultiLine"
                android:minLines="2"
                android:maxLines="3"
                android:textSize="16sp"
                android:padding="16dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Allocated Room -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="#FFFFFF"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxStrokeColor="#3F51B5"
            app:hintTextColor="#3F51B5">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSignupRoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ðŸšª Allocated Room Number"
                android:inputType="text"
                android:textSize="16sp"
                android:padding="16dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="#FFFFFF"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxStrokeColor="#3F51B5"
            app:hintTextColor="#3F51B5"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="#3F51B5">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSignupPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ðŸ”’ Create Password"
                android:inputType="textPassword"
                android:textSize="16sp"
                android:padding="16dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Payment Receipt Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’³ Payment Receipt"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1A237E"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvReceiptFileName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No file selected"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="12dp"/>

                <Button
                    android:id="@+id/btnUploadReceipt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Choose File"
                    android:textSize="14sp"
                    android:textColor="#3F51B5"
                    android:backgroundTint="#E8EAF6"
                    app:cornerRadius="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Face Capture Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“¸ Face Capture"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1A237E"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvFaceStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No image captured"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="12dp"/>

                <Button
                    android:id="@+id/btnCaptureFace"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Capture Photo"
                    android:textSize="14sp"
                    android:textColor="#3F51B5"
                    android:backgroundTint="#E8EAF6"
                    app:cornerRadius="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Sign Up Button -->
        <Button
            android:id="@+id/btnSignup"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Sign Up"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3F51B5"
            app:cornerRadius="12dp"
            android:elevation="4dp"
            android:layout_marginBottom="16dp"/>

        <!-- Already Have Account -->
        <TextView
            android:id="@+id/tvGoToLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already have an account? Login"
            android:textSize="14sp"
            android:textColor="#3F51B5"
            android:gravity="center"
            android:padding="12dp"
            android:layout_marginBottom="24dp"/>

    </LinearLayout>

</ScrollView>