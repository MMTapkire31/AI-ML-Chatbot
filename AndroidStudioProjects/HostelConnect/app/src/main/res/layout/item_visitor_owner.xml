<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/tvHostellerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hosteller: Student Name"
        android:textSize="14sp"
        android:textColor="#64748B"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/tvVisitorName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Visitor Name"
            android:textSize="16sp"
            android:textColor="#1E293B"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending"
            android:textSize="14sp"
            android:textColor="#F59E0B"
            android:textStyle="bold"
            android:padding="6dp"
            android:background="#FEF3C7"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvVisitorPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+91 9876543210"
        android:textSize="14sp"
        android:textColor="#64748B"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/tvVisitDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visit Date: 2024-12-18"
        android:textSize="12sp"
        android:textColor="#94A3B8"
        android:layout_marginBottom="12dp"/>

    <LinearLayout
        android:id="@+id/layoutActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <Button
            android:id="@+id/btnApprove"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Approve"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:backgroundTint="#10B981"/>

        <Button
            android:id="@+id/btnReject"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Reject"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:backgroundTint="#EF4444"/>
    </LinearLayout>
</LinearLayout>
