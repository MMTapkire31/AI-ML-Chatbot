<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.hostelconnect">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HostelConnect"
        tools:targetApi="31">

        <!-- ================= MAIN / LAUNCHER ================= -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ================= LOGIN ACTIVITIES ================= -->
        <activity android:name=".HostellerLoginActivity" />
        <activity android:name=".OwnerLogin" />
        <activity android:name=".SecurityLogin" />

        <!-- ================= SIGNUP ACTIVITIES ================= -->
        <activity android:name=".HostellerSignUpActivity" />
        <activity android:name=".OwnerSignup" />
        <activity android:name=".SecuritySignup" />

        <!-- ================= DASHBOARDS ================= -->
        <activity android:name=".HostellerDashboard" />
        <activity android:name=".OwnerDashboard" />
        <activity android:name=".SecurityDashboard" />

        <activity android:name=".OwnerHostellersActivity" />
        <activity android:name=".OwnerAttendanceActivity" />
        <activity android:name=".OwnerPaymentsActivity" />
        <activity android:name=".OwnerComplaintsActivity" />
        <activity android:name=".OwnerVisitorsActivity" />
        <activity android:name=".OwnerMaintenanceActivity" />
        <activity android:name=".OwnerLeaveRequestsActivity" />
        <activity android:name=".OwnerFeedbacksActivity" />
        <activity android:name=".OwnerNoticesActivity" />


        <!-- ================= HOSTELLER FEATURES ================= -->
        <activity android:name=".AttendaceActivity" />
        <activity android:name=".AttendanceMarkActivity" />
        <activity android:name=".EmergencyContactActivity" />
        <activity android:name=".LaundryServiceActivity" />
        <activity android:name=".MessMenuActivity" />
        <activity android:name=".NoticesActivity" />
        <activity android:name=".RulesActivity" />
        <activity android:name=".PaymentActivity" />
        <activity android:name=".FeedBackActivity" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".EditProfileActivity" />
        <activity android:name=".LeaveRequestAdapter"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".LeaveRequestActivity"
            android:exported="false" />


        <!-- ================= QR MODULE ================= -->
        <activity android:name=".QRCodeGenerator" />
        <activity android:name=".QRScannerActivity" />
        <activity android:name=".QRDisplayActivity" />

        <!-- ================= SECURITY / VISITOR ================= -->
        <activity android:name=".VisitorManagementActivity" />

        <!-- ================= OWNER ================= -->
        <activity android:name=".ComplaintsActivity" />

        <!-- ================= RECEIVER ================= -->
        <receiver
            android:name=".AttendanceCheckReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="com.example.hostelconnect.ATTENDANCE_CHECK" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
